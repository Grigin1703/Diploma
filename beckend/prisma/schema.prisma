generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id       Int       @id @default(autoincrement())
  name     String
  airports Airport[]
}

model Airport {
  id     Int    @id @default(autoincrement())
  name   String
  code   String
  price  Int?
  cityId Int
  city   City   @relation(fields: [cityId], references: [id])
}

model admins {
  id       Int    @id @default(autoincrement())
  username String @unique @db.VarChar(255)
  password String
}

model imges {
  id        Int    @id(map: "img_pkey") @default(autoincrement())
  tour_id   Int?
  image_url Json?
  tours     tours? @relation(fields: [tour_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "img_tour_id_fkey")
}

model tours {
  id                     Int      @id @default(autoincrement())
  season                 String?  @db.VarChar(255)
  title                  String?  @db.VarChar(255)
  sub_title              String?  @db.VarChar(255)
  rating                 Int?
  duration_min           Int?
  duration_max           Int?
  pricesByDuration       Json     @default("{}")
  advantages             String?
  amenities              String[]
  location_neighborhood  String[]
  location_communication String[]
  distance_airport       String[]
  beaches                String[]
  about_hotel            String[]
  sports_entertainment   String[]
  pool                   String[]
  spa                    String[]
  services               String[]
  contacts               String[]
  for_children           String[]
  mealPlans              Json?
  rating_details         Json?
  imges                  imges[]
  rooms                  Json?
}
